{% extends 'CocarBundle::layout.html.twig' %}

{% block main -%}
    <h2>Entidades cadastradas</h2>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identificador</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.identifier }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('entity_show', { 'id': entity.id }) }}">Visualizar</a>
                    </li>
                    <li>
                        <a href="{{ path('entity_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('entity_new') }}">
                Cadastrar uma nova entidade
            </a>
        </li>
    </ul>
    {% endblock %}
